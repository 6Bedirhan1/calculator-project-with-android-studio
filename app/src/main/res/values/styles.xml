<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- İşlem Operatörleri İçin Özel Buton Stili -->
    <style name="OperatorButton" parent="CalcButton">
        <item name="android:background">@drawable/operator_button_background</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- "=" Butonu İçin Özel Stil -->
    <style name="EqualsButton" parent="CalcButton">
        <item name="android:background">@drawable/equals_button_background</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- "C" (Temizle) Butonu İçin Özel Stil -->
    <style name="ClearButton" parent="CalcButton">
        <item name="android:background">@drawable/clear_button_background</item>
        <item name="android:backgroundTint">@null</item>
    </style>
</resources>
